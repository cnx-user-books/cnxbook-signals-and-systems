		    </m:apply>
		    </m:matrixrow>
		      <m:matrixrow>
		    <m:apply>
		      <m:selector/>
			<m:ci>a</m:ci>
			<m:cn>2</m:cn>
			<m:cn>1</m:cn>
		    </m:apply>
		    <m:apply>
		      <m:selector/>
