                      <m:mrow>
                        <m:mo stretchy="false">(</m:mo>
                        <m:mrow>
                          <m:mi>s</m:mi>
                          <m:mo stretchy="false">+</m:mo>
                          <m:mn>1</m:mn>
                        </m:mrow>
                        <m:mo stretchy="false">)</m:mo>
                        <m:mo stretchy="false">(</m:mo>
                        <m:mrow>
                          <m:mi>s</m:mi>
                          <m:mo stretchy="false">+</m:mo>
                          <m:mtext>100</m:mtext>
                        </m:mrow>
                        <m:mrow>
                          <m:mo stretchy="false">)</m:mo>
