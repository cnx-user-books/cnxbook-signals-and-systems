                            <m:mrow>
                              <m:mrow>
                                <m:mrow>
                                  <m:mo stretchy="false">−</m:mo>
                                  <m:mo stretchy="false">(</m:mo>
                                </m:mrow>
                                <m:mrow>
                                  <m:mi>α</m:mi>
                                  <m:mo stretchy="false">+</m:mo>
                                  <m:mi fontstyle="italic">βK</m:mi>
                                </m:mrow>
                                <m:mo stretchy="false">)</m:mo>
