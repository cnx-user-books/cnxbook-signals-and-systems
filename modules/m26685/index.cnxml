                        <m:mrow/>
                      </m:mtd>
                    </m:mtr>
                  </m:mtable>
                  <m:mstyle fontstyle="italic">
                    <m:mrow>
                      <m:mtext>and</m:mtext>
                    </m:mrow>
                  </m:mstyle>
                  <m:mtable>
                    <m:mtr>
                      <m:mtd>
                        <m:mrow/>
                      </m:mtd>
                      <m:mtd>
                        <m:mrow/>
                      </m:mtd>
                    </m:mtr>
                  </m:mtable>
                  <m:mi>Y</m:mi>
                  <m:mo stretchy="false">(</m:mo>
                  <m:mi>s</m:mi>
                  <m:mrow>
                    <m:mo stretchy="false">)</m:mo>
                    <m:mo stretchy="false">=</m:mo>
                    <m:mi>K</m:mi>
                  </m:mrow>
                  <m:mo stretchy="false">(</m:mo>
                  <m:mi>s</m:mi>
