                            <m:mi>n</m:mi>
                            <m:mi>T</m:mi>
                          </m:mfrac>
                        </m:mrow>
                        <m:mo stretchy="false">)</m:mo>
                      </m:mrow>
                    </m:mrow>
                  </m:mrow>
                </m:mrow>
              </m:mrow>
