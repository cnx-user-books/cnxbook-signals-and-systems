	  Now, using the "partial summation formula"

	  <equation id="equation4">
	    <m:math>
	      <m:apply>
		<m:eq/>
                <m:apply>
                  <m:sum/>
		  <m:bvar><m:ci>n</m:ci></m:bvar>
		  <m:lowlimit>
		    <m:cn>0</m:cn>
		  </m:lowlimit>
		  <m:uplimit>
		    <m:ci>M</m:ci>
		  </m:uplimit>
		  <m:apply>
		    <m:power/>
		    <m:ci>a</m:ci>
		    <m:ci>n</m:ci>
		  </m:apply>
                </m:apply>
                <m:apply>
                  <m:divide/>
		  <m:apply>
		    <m:minus/>
		    <m:cn>1</m:cn>
		    <m:apply>
		      <m:power/>
		      <m:ci>a</m:ci>
		      <m:apply>
			<m:plus/>
			<m:ci>M</m:ci>
			<m:cn>1</m:cn>
		      </m:apply>
		    </m:apply>
		  </m:apply>
		  <m:apply>
		    <m:minus/>
		    <m:cn>1</m:cn>
		    <m:ci>a</m:ci>
		  </m:apply>
                </m:apply>
	      </m:apply>
	    </m:math>
	  </equation>

	  <equation id="eq5">
	    <m:math>
	      <m:apply>
		<m:eq/>
                <m:ci>
                  <m:msub>
                    <m:mi>c</m:mi>
                    <m:mi>k</m:mi>
                  </m:msub>
                </m:ci>
                <m:apply>
                  <m:times/>
		  <m:apply>
		    <m:divide/>
		    <m:cn>1</m:cn>
		    <m:ci>N</m:ci>
		  </m:apply>
		  <m:apply>
		    <m:exp/>
		    <m:apply>
		      <m:times/>
		      <m:imaginaryi/>
		      <m:apply>
			<m:divide/>
			<m:apply>
			  <m:times/>
			  <m:cn>2</m:cn>
