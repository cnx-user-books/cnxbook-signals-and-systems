      <exercise id="e1">
	<problem id="idp2863824">
	  <para id="p1">
	   ¿Pará 
	    <m:math>
		<m:apply>
			<m:ci type="fn">f</m:ci>
			<m:ci>t</m:ci>
		</m:apply>
	</m:math>
	    poder tener “ energía finita,” que es lo que 
	    <m:math>
		<m:ci>
			<m:msub>
				<m:mi>c</m:mi>
				<m:mi>n</m:mi>
			</m:msub>
		</m:ci>
	</m:math>
	   hace cuando 
	    <m:math>
		<m:apply>
			<m:tendsto/>
			<m:ci>n</m:ci>
			<m:infinity/>
		</m:apply>
	</m:math>?
	  </para>
	</problem>	
	<solution id="idm7060048">
	  <para id="sol1">
	<m:math>
		<m:apply>
			<m:lt/>
			<m:apply>
				<m:power/>
				<m:apply>
					<m:abs/>
					<m:ci>
						<m:msub>
							<m:mi>c</m:mi>
							<m:mi>n</m:mi>
						</m:msub>
					</m:ci>
				</m:apply>
				<m:cn>2</m:cn>
			</m:apply>
			<m:infinity/>
		</m:apply>
	</m:math>
	   para
	    <m:math>
		<m:apply>
			<m:ci type="fn">f</m:ci>
			<m:ci>t</m:ci>
		</m:apply>
	</m:math>
	   tener energía finita.
	  </para>
	</solution>
      </exercise>


      <exercise id="e2">
