		      <m:cn>-1</m:cn>
		      <m:apply>
			<m:plus/>
			<m:ci>α</m:ci>
			<m:apply>
			  <m:times/>
			  <m:imaginaryi/>
			  <m:ci>Ω</m:ci>
			</m:apply>
		      </m:apply>
		    </m:apply>
		  </m:apply>
		  
		</m:apply>
	      </m:math>
