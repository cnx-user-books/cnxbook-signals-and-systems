     <m:mi>x</m:mi>

     <m:mo>⁢</m:mo>

     <m:mrow>

      <m:mo>(</m:mo>

      <m:mi>nT</m:mi>

      <m:mo>)</m:mo>

     </m:mrow>

     <m:mo>⁢</m:mo>

     <m:mi>δ</m:mi>

     <m:mo>⁢</m:mo>

     <m:mrow>

      <m:mo>(</m:mo>

      <m:mrow>

       <m:mi>t</m:mi>

       <m:mo>⁢</m:mo>

       <m:mi>−</m:mi>

       <m:mo>⁢</m:mo>

       <m:mi>nT</m:mi>

      </m:mrow>

