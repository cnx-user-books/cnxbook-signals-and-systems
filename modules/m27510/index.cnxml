							</m:mover>
							<m:mo stretchy="false">[</m:mo>
							<m:mi>m</m:mi>
							<m:mrow>
								<m:mo stretchy="false">]</m:mo>
								<m:mo stretchy="false">=</m:mo>
								<m:mfrac>
									<m:mn>1</m:mn>
									<m:mi>N</m:mi>
								</m:mfrac>
