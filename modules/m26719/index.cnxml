					</m:mrow>
				</m:mrow>
				<m:mo>=</m:mo>
				<m:mrow>
					<m:mi>j</m:mi>
					<m:mo>⁢</m:mo>
					<m:mfrac>
						<m:mrow>
							<m:mrow>
								<m:mi>−</m:mi>
								<m:mo>⁢</m:mo>
								<m:mn>2</m:mn>
							</m:mrow>
							<m:mo>⁢</m:mo>
							<m:mi>πf</m:mi>
						</m:mrow>
						<m:mrow>
							<m:msup>
								<m:mrow>
									<m:mo>(</m:mo>
									<m:mrow>
										<m:mn>2</m:mn>
										<m:mo>⁢</m:mo>
										<m:mi>πf</m:mi>
									</m:mrow>
									<m:mo>)</m:mo>
								</m:mrow>
								<m:mn>2</m:mn>
							</m:msup>
							<m:mo>+</m:mo>
							<m:msup>
								<m:mi>α</m:mi>
								<m:mn>2</m:mn>
							</m:msup>
						</m:mrow>
					</m:mfrac>
				</m:mrow>
			</m:mrow>
		</m:mrow>
	</m:math></para>
    <para id="id12263516">Where</para>
    <para id="id12263524"><m:math>
		<m:mrow>
			<m:mrow>
				<m:mi>sgn</m:mi>
