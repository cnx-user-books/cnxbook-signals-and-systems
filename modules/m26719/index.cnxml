				<m:mo>⁢</m:mo>
				<m:mrow>
					<m:mo>(</m:mo>
					<m:mi>t</m:mi>
					<m:mo>)</m:mo>
				</m:mrow>
			</m:mrow>
			<m:mo>=</m:mo>
			<m:mrow>
				<m:mrow>
					<m:mi>cos</m:mi>
					<m:mo>⁢</m:mo>
					<m:mrow>
						<m:mo>(</m:mo>
						<m:mrow>
							<m:mn>2</m:mn>
							<m:mo>⁢</m:mo>
							<m:msub>
								<m:mi>πf</m:mi>
								<m:mi>o</m:mi>
							</m:msub>
							<m:mo>⁢</m:mo>
							<m:mi>t</m:mi>
						</m:mrow>
						<m:mo>)</m:mo>
					</m:mrow>
					<m:mo>⁢</m:mo>
					<m:mi>u</m:mi>
					<m:mo>⁢</m:mo>
					<m:mrow>
						<m:mo>(</m:mo>
						<m:mi>t</m:mi>
						<m:mo>)</m:mo>
					</m:mrow>
				</m:mrow>
				<m:mo>=</m:mo>
				<m:mrow>
					<m:mi>cos</m:mi>
					<m:mo>⁢</m:mo>
					<m:mrow>
						<m:mo>(</m:mo>
						<m:mrow>
							<m:mn>2</m:mn>
							<m:mo>⁢</m:mo>
							<m:msub>
								<m:mi>πf</m:mi>
								<m:mi>o</m:mi>
							</m:msub>
							<m:mo>⁢</m:mo>
							<m:mi>t</m:mi>
						</m:mrow>
