					</m:mtr>
					<m:mtr>
						<m:mtd>
							<m:mrow>
								<m:mrow>
									<m:mrow>
										<m:mi>−</m:mi>
										<m:mo>⁢</m:mo>
										<m:mn>1</m:mn>
									</m:mrow>
									<m:mo>⁢</m:mo>
									<m:mtext>
									</m:mtext>
									<m:mi>for</m:mi>
