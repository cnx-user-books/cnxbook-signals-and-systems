	</equation>

	      Si
	      <m:math>
		<m:apply>
			<m:eq/>
			<m:ci>l</m:ci>
			<m:ci>k</m:ci>
		</m:apply>
	</m:math>, 
	       entonces
	      
	      <equation id="eq9">
		<m:math display="block">
			<m:apply>
				<m:eq/>
				<m:apply>
					<m:scalarproduct/>
					<m:ci><m:msub>
							<m:mi>b</m:mi>
							<m:mi>k</m:mi>
						</m:msub></m:ci>
					<m:ci><m:msub>
							<m:mi>b</m:mi>
							<m:mi>l</m:mi>
