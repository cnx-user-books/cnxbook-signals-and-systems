				</m:apply>
				<m:apply>
					<m:sum/>
					<m:bvar>
						<m:ci>n</m:ci>
					</m:bvar>
					<m:uplimit>
						<m:apply>
							<m:minus/>
							<m:ci>N</m:ci>
							<m:cn>1</m:cn>
						</m:apply>
					</m:uplimit>
					<m:lowlimit>
						<m:cn>0</m:cn>
					</m:lowlimit>
					<m:apply>
						<m:exp/>
						<m:apply>
							<m:times/>
							<m:imaginaryi/>
							<m:apply>
								<m:divide/>
								<m:apply>
									<m:times/>
									<m:cn>2</m:cn>
									<m:pi/>
								</m:apply>
								<m:ci>N</m:ci>
							</m:apply>
							<m:apply>
								<m:minus/>
								<m:ci>l</m:ci>
								<m:ci>k</m:ci>
							</m:apply>
							<m:ci>n</m:ci>
						</m:apply>
					</m:apply>
