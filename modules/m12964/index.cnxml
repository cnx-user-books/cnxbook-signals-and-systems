	<figure orient="horizontal" id="fig5">
	  <subfigure id="s1_fig5">
	    <media id="idm1544816" alt=""><image src="../../media/samp_g1.png" mime-type="image/png"/></media>
	  </subfigure>
	  <subfigure id="s2_fig5">
	    <media id="idm8978320" alt=""><image src="../../media/samp_g2.png" mime-type="image/png"/></media>
	  </subfigure>
	  <caption>
	    <m:math>
	      <m:apply>
		<m:ci type="fn">F</m:ci>
		<m:apply>
