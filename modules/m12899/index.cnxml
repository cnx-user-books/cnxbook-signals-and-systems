									<m:cn>0</m:cn>
								</m:lowlimit>
								<m:uplimit>
									<m:ci>T</m:ci>
								</m:uplimit>
								<m:apply>
									<m:times/>
									<m:apply>
										<m:ci type="fn">f</m:ci>
										<m:ci>τ</m:ci>
									</m:apply>
									<m:apply>
										<m:ci type="fn">g</m:ci>
										<m:apply>
											<m:minus/>
											<m:ci>t</m:ci>
											<m:ci>τ</m:ci>
										</m:apply>
									</m:apply>
								</m:apply>
							</m:apply>
							<m:apply>
								<m:exp/>
								<m:apply>
									<m:minus/>
									<m:apply>
										<m:times/>
										<m:imaginaryi/>
										<m:ci>
											<m:msub>
												<m:mi>ω</m:mi>
												<m:mn>0</m:mn>
											</m:msub>
										</m:ci>
										<m:ci>n</m:ci>
