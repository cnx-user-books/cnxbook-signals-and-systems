								<m:apply>
									<m:int/>
									<m:bvar>
										<m:ci>t</m:ci>
									</m:bvar>
									<m:lowlimit>
										<m:cn>0</m:cn>
									</m:lowlimit>
									<m:uplimit>
										<m:ci>T</m:ci>
									</m:uplimit>
									<m:apply>
										<m:times/>
