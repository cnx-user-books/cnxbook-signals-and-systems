						</m:apply>
						<m:apply>
							<m:ci type="fn">μ</m:ci>
							<m:ci>t</m:ci>
						</m:apply>
					</m:apply>
				</m:apply>
			</m:apply>
		</m:math>
	</equation>

	  donde para 
	  <m:math>
		<m:apply>
			<m:lt/>
			<m:ci>m</m:ci>
			<m:ci>n</m:ci>
		</m:apply>
	</m:math> we have 
	  <m:math>
		<m:apply>
			<m:eq/>
			<m:ci><m:msub>
